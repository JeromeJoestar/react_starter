{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "jsx": "react",
    "removeComments": true,
    "esModuleInterop": true,
    // Don't emit; allow Babel to transform files.
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "test-utils": ["./src/__test__/test-utils.tsx"],
      "@src/*": ["./src/*"]
    },
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
